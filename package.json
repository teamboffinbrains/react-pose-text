  "license": "GPLv3",
  "presets": [
    "env"
  ],
  "peerDependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "bb-react-pose": "^3.1.0"
  },
  "devDependencies": {
    "@types/react": "^16.3.16",
    "prettier": "1.11.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "rollup": "^0.59.1",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-typescript2": "^0.14.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
